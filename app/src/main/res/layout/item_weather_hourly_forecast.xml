<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/hourly_forecast_padding">

    <TextView
        android:id="@+id/tv_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_hourly_icon"
        android:layout_width="@dimen/hourly_forecast_img_w"
        android:layout_height="@dimen/hourly_forecast_img_h" />

    <TextView
        android:id="@+id/tv_hourly_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>